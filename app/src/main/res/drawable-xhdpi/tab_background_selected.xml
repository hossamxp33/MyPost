<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>

            <solid android:color="@color/bottomNavIcon" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="@color/tab" />
            <corners android:radius="16dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>