<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.MyPost" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.MyPost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>
    <style name="BottomNavStyle">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>

    <style name="HomeTitles">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="grayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>

    </style>
        <style name="blackText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    //// circle shape
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="ShapeAppearanceOverlay.DifferentCornerSize" parent="">
        <item name="cornerSize">@dimen/dimen_24</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="LoginTextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="color">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="normalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/hint_gray</item>

    </style>
</resources>